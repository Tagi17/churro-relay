generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("mysql://root:yourpassword@localhost:3306/relay")
}
model Subscriber {
  id         Int      @id @default(autoincrement())
  name       String
  dateJoined DateTime
  userId     Int
  User       User     @relation(fields: [userId], references: [id])
}

model User {
  id          Int          @id @default(autoincrement())
  subscribers Subscriber[]
}
